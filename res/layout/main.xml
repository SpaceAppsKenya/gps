<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    
    <Button 
        android:text="stream" 
        android:textSize="8sp" 
        android:textStyle="bold" 
        android:id="@+id/login" 
        android:typeface="serif" 
        android:layout_width="168dp" 
        android:layout_height="wrap_content"
         android:onClick="sendin">
        
    </Button>
    
<TextView  
   android:id="@+id/simu"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="simu:"
    />
<TextView  
   android:id="@+id/lat"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 

    />
<TextView  
   android:id="@+id/lon"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    
    />

<TextView  
   android:id="@+id/alt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    
    />

<TextView
   android:id="@+id/speed"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Current Speed (m/s):  You are not moving"
    />
<TextView
   android:id="@+id/kmph"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Current Speed (kmph):      You are not moving"
    />
<TextView
   android:id="@+id/avgspeed"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Average Speed (m/s):      Yet to move"
    />
<TextView
   android:id="@+id/avgkmph"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Average Speed (kmph):      Yet to move"
    />
    
    <TextView
   android:id="@+id/topspeed"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="Top Speed (m/s):      ....."
    />
    
    <TextView
   android:id="@+id/topkmph"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Top Speed (kmph):      ....."
    />
    
    <Button 
        android:text="Take Photo" 
        android:textSize="8sp" 
        android:textStyle="bold" 
        android:id="@+id/photo" 
        android:typeface="serif" 
        android:layout_width="168dp" 
        android:layout_height="wrap_content"
         />
    
 <ImageView 
    android:id="@+id/ImageView"
    android:layout_width="200dp"
    android:layout_height="200dp"
    
    />

		
</LinearLayout>